<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="80dp">

    <ImageView
        android:id="@+id/health_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:src="@mipmap/ic_blood_glucose"/>
    <TextView
        android:id="@+id/health_name"
        android:layout_width="175dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@+id/health_icon"
        android:textColor="#000000"
        android:text="This is the health name"
        android:gravity="center"/>
    <TextView
        android:id="@+id/health_figure"
        android:layout_width="wrap_content"
        android:layout_height="75dp"
        android:layout_toRightOf="@id/health_name"
        android:layout_alignParentRight="true"
        android:textColor="#000000"
        android:text="Figure"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_below="@+id/health_icon"/>
</RelativeLayout>